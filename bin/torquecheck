require 'rubygems'

require File.join(__FILE__, '..', '..', 'lib/gem' )
require File.join(__FILE__, '..', '..', 'lib/ruby' )
require File.join(__FILE__, '..', '..', 'lib/server' )
require File.join(__FILE__, '..', '..', 'lib/bundler' )
require File.join(__FILE__, '..', '..', 'lib/environment' )

puts ">>>>> Environment <<<<<<"
TorqueBox::Environment.display
puts
puts ">>>>> Ruby <<<<<<"
TorqueBox::Ruby.display
puts
puts ">>>>> TorqueBox Server <<<<<<"
TorqueBox::Server.new.display 
puts
puts ">>>>> Gems <<<<<<"
TorqueBox::Gem.display
puts
puts ">>>>> Bundler <<<<<<"
TorqueBox::Bundler.display
puts


